<?xml version="1.0"?>
<robot name="first_robot">
    <!--机器人身体部分-->
    <link name="base_link">
        <!--部件的外观描述-->
        <visual>
            <!--沿自己几何中心的偏移量以及几何量-->
            <origin xyz=" 0 0 0" rpy="0 0 0"/>
            <!--几何形状-->
            <geometry>
                <!--圆柱体 半径0.10 高度0.12-->
                <cylinder radius="0.10" length="0.12"/>
            </geometry>
            <!--材质颜色: r g b 不透明度-->
            <material name="white">
                <color rgba="1.0 1.0 1.0 0.5"/>
                
            </material>
        </visual>
    </link>

    <!--机器人的IMU部件，惯性测量传感器-->
    <link name="imu_link">
    <visual>
            <origin xyz=" 0 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.02 0.02 0.02"/>
            </geometry>
            <material name="black">
                <color rgba="0 0 0 0.5"/>
            </material>
    </visual>
    </link>

    <!--机器人关节, 用于组合机器人的部件-->
    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
    </joint>
</robot>
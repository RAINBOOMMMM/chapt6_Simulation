<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find fishbot_description)/urdf/fishbot/common_inertia.xacro"/>
    <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <!--机器人的IMU部件，惯性测量传感器-->
        <link name="${wheel_name}_link">
            <visual>
                    <origin xyz="0 0 0" rpy="1.57079 0 0"/>
                    <geometry>
                        <cylinder radius="0.032" length="0.04"/>
                    </geometry>
                    <material name="yellow">
                        <color rgba="1.0 1.0 0.0 1.0"/>
                    </material>
            </visual>

            <collision>
                    <origin xyz="0 0 0" rpy="1.57079 0 0"/>
                    <geometry>
                        <cylinder radius="0.032" length="0.04"/>
                    </geometry>
                    <material name="yellow">
                        <color rgba="1.0 1.0 0.0 1.0"/>
                    </material>
            </collision>
            <xacro:cylinder_inertia m="0.05" r="0.032" l="0.04"/>
        </link>

        <!--机器人关节, 用于组合机器人的部件-->
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            <origin xyz="${xyz}" rpy="0.0 0.0 0.0"/>
            <axis xyz="0.0 1.0 0.0"/>   <!--绕y轴旋转-->
        </joint>

        <gazebo reference="${wheel_name}_link">
            <mu1 value="20.0"/>          <!--切向摩擦系数，默认值是1.0-->
            <mu2 value="20.0"/>          <!--法向摩擦系数，默认值是1.0-->
            <kp value="1000000000.0"/>   <!--刚度系数，默认值是1000000000000.0-->
            <kd value="1.0"/>            <!--阻尼系数，默认值1.0-->
        </gazebo>

        <!-- Transmission：绑定 effort 控制 -->
        <transmission name="${wheel_name}_trans">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="${wheel_name}_joint">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
        </joint>
        <actuator name="${wheel_name}_motor">
            <hardwareInterface>EffortJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
        </transmission>
        
    </xacro:macro>


</robot>
